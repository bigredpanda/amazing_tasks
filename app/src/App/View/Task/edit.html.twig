{% extends 'base.html.twig' %}

{% block content %}
    <h2>Update task text</h2>
    <hr>

    {% if error %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endif %}

    <form class method="POST" action="/task/edit/{{ task.id }}" enctype="multipart/form-data">
        <div class="form-group">
            <label>Text<span style="color: darkred; font-weight: bold">*</span></label>
            <textarea rows="5" name="message" id="message" class="form-control"
                      required>{{ task.message }}</textarea>
        </div>
        <div class="form-group form-inline">
            <label>Is performed?</label>
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="is_performed" {% if task.is_performed %} checked {% endif %}>
                    <span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>
                </label>
            </div>
        </div>

        <button class="btn btn-success">Update it!</button>
    </form>
{% endblock %}
